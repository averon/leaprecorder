<!DOCTYPE html>
<html>
<head>
  <base href="/">
  <title>LeapRecorder</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div id="main-nav" class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="http://www.leapmotion.com/">
          <img alt="LEAP">
        </a>
      </div>
      <ul class="nav nav-tabs">
        <li class="active"><a href="/">Recorder</a></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Recordings <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <% recordings.each do |recording| %>
              <li><a href="<%= recording.id %>"><%= recording.name %></a></li>
            <% end %>
          </ul>
        </li>
        <p class="navbar-text navbar-right"><%= recording.name if recording %></p>
      </ul>
    </div>
  </div>

<%= yield %>

</body>
</html>
